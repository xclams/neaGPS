        };
        if(echoErrors)
            addError("join.error.neaaffiliate");
        addWarning("neaaffiliate");
        return false;
    }

    public boolean isValidNEAProfession(String ps, boolean echoErrors) {
        if(ps!=null && ps.length()>2 && !ps.contains(" ")) {
            addOk("neaprofession");
            return true
        };
        if(echoErrors)
