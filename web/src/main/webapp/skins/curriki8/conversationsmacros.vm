            #set($commentDoc = $conversationDoc)
            ##
            #displayThread($rootKey, $commentThreads, $commentDoc)
          #else
            <p class="noitems">$msg.get('conversation.empty')</p>
          #end
          #if(!$replied)
            #displayCommentForm($conversationDoc)
          #end
        </div>

      </div>
    #end
  </div>
